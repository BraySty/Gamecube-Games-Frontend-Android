<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CreateVideogame">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/videogame_input_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/text_shape"
        android:hint="ID"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurface"
        android:fontFamily="sans-serif"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/videogame_input_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/text_shape"
        android:hint="Título"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurface"
        android:fontFamily="sans-serif"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/videogame_input_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/videogame_input_developer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/text_shape"
        android:hint="Desarrollador"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurface"
        android:fontFamily="sans-serif"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/videogame_input_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/videogame_input_publisher"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/text_shape"
        android:hint="Distribuidor"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurface"
        android:fontFamily="sans-serif"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/videogame_input_developer"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/videogame_input_europe"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/text_shape"
        android:hint="Europa"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurface"
        android:fontFamily="sans-serif"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/videogame_input_publisher"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/videogame_input_japan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/text_shape"
        android:hint="Japón"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurface"
        android:fontFamily="sans-serif"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/videogame_input_europe"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/videogame_input_america"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/text_shape"
        android:hint="Estados Unidos de América"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurface"
        android:fontFamily="sans-serif"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/videogame_input_japan"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>